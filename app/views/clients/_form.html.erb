<%= render partial: 'shared/errors', locals: { form: form } %>
<div class='col-md-8'>
  <%= form_for(form, url: url, method: method) do |f| %>
    <div class="form-group">
      <%= f.label :name, t('clients.index.name') %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :city, t('clients.index.city') %><br>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t('defaults.send'), { class: 'btn btn-primary' } %>
      <%= link_to 'Back', clients_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>