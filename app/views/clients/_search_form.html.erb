<%= form_for(form, url: url, method: method) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this client from being searched:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('clients.index.name') %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city, t('clients.index.city') %><br>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('defaults.search'), class: 'btn btn-primary' %>
  </div>
<% end %>
